<%= form_with model: @thought do |form| %>
  <%= label_tag(:title, "Title:") %>
  <%= form.text_field :title %>
  <%= label_tag(:content, "Thought:") %>
  <%= form.text_field :content %>
  <%= form.submit "Release" %>
<% end %>

  <% if @thought.errors.any? %>
