      <h2><%= pluralize(@thought.errors.count, "error") %> prohibited this thought from being created:</h2>

      <ul>
      <% @thought.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>