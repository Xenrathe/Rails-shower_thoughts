<%= javascript_import_module_tag "custom/thoughts_" %>

<div class="thoughts">
  <span class="title-word">SHOWER THOUGHTS
    <span class="texture"></span>
  </span>

  <div class="thoughts-filters">
    <%= link_to image_tag("icons/eye.svg", size: "75x75", class: "img-filter"), thoughts_path(filter: 'visible'), class: "selected filter", data: { filter: 'visible' } %>
    <%= link_to image_tag("icons/star.svg", size: "75x75", class: "img-filter"), thoughts_path(filter: 'favorite'), class: "filter" , data: { filter: 'favorite' } %>
    <%= link_to image_tag("icons/spotlight-beam.svg", size: "75x75", class: "img-filter"), thoughts_path(filter: 'spotlight'), class: "filter", data: { filter: 'spotlight' }  %>
  </div>

  <div class="thoughts-container">
    <% @thoughts.each do |thought| %>
    <div class="single-thought">
        <p class="title"><%= thought.title %></p>
        <p class="content"><%= thought.content %></p>
        
        <% if user_signed_in? %>
          <div class="actions">
            <div class="non-plumber">
              <% hide_class = current_user.hidden_thoughts.include?(thought) ? "img-on" : "img-off" %>
              <%= link_to image_tag("icons/eye-off.svg", size: "25x25", class: hide_class), hide_thought_path(thought), remote: true, class: 'hide', data: { thought_id: thought.id } %>
              <% favorite_class = current_user.favorite_thoughts.include?(thought) ? "img-on" : "img-off" %>
              <%= link_to image_tag("icons/star.svg", size: "25x25", class: favorite_class), favorite_thought_path(thought), remote: true, class: "favorite", data: { thought_id: thought.id } %>
              
              <% if thought.user_id == current_user.id &&  current_user.plumber_status != 'Master'%>
                <%= link_to image_tag("icons/delete.svg", size: "25x25", class: "img-off") , thought_path(thought), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this thought?'} %>
                <a href=""><%= image_tag("icons/text-box-edit.svg", size: "25x25", class: "img-off")%></a>
              <% end %>
            </div>

            <% if current_user.plumber_status == 'Yes' || current_user.plumber_status == 'Master' %>
              <div class="plumber">
                <a href=""><%= image_tag("icons/spotlight-beam.svg", size: "25x25", class: "img-off")%></a>
              </div>
            <% end %>

            <% if current_user.plumber_status == 'Master' %>
              <div class="master">
              <%= link_to image_tag("icons/delete.svg", size: "25x25", class: "img-off"), thought_path(thought), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this thought?'} %>
              <a href=""><%= image_tag("icons/web-remove.svg", size: "25x25", class: "img-off")%></a>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to "New Thought", new_thought_path %>
  <% if user_signed_in? %>
  <p><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %></p>
  <% end %>
</div>